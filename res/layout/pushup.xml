<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ImageButton android:layout_height="wrap_content" android:layout_centerInParent="true" android:src="@drawable/chickenbutton" android:layout_width="wrap_content" android:id="@+id/button" android:hapticFeedbackEnabled="true"></ImageButton>
<TextView android:layout_height="wrap_content" android:id="@+id/text" android:layout_width="fill_parent" android:text="Cock Pushups:" android:gravity="center_vertical|center_horizontal"></TextView>
<TextView android:layout_height="wrap_content" android:id="@+id/number" android:layout_width="fill_parent" android:text="0" android:textSize="60sp" android:layout_below="@+id/text1" android:layout_alignLeft="@+id/text1" android:layout_alignRight="@+id/text1" android:gravity="center_vertical|center_horizontal"></TextView>

</RelativeLayout>
